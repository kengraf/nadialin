{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation template to create a dual-stack VPC with a single subnet.",
  "Resources": {
    "MyVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": "MyDualStackVPC"
          }
        ]
      }
    },
    "MyVPCAssociateIPv6CidrBlock": {
      "Type": "AWS::EC2::VPCCidrBlock",
      "Properties": {
        "VpcId": {
          "Ref": "MyVPC"
        },
        "AmazonProvidedIpv6CidrBlock": true
      }
    },
    "MySubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "MyVPC"
        },
        "CidrBlock": "10.0.0.0/24",
        "Ipv6CidrBlock": {
          "Fn::Select": [
            "0",
            {
              "Fn::Cidr": [
                {
                  "Fn::GetAtt": ["MyVPC", "Ipv6CidrBlock"]
                },
                256,
                64
              ]
            }
          ]
        },
        "MapPublicIpOnLaunch": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": "MyDualStackSubnet"
          }
        ]
      }
    }
  },
  "Outputs": {
    "VpcId": {
      "Description": "VPC ID of the created VPC",
      "Value": {
        "Ref": "MyVPC"
      }
    },
    "SubnetId": {
      "Description": "Subnet ID of the created subnet",
      "Value": {
        "Ref": "MySubnet"
      }
    }
  }
}
