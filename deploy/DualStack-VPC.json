{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "IPv6DualStackVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "Tags": [
          { "Key": "Name", "Value": "DualStackVPC" }
        ]
      }
    },
    "IPv6CIDRAssociation": {
      "Type": "AWS::EC2::VPCCidrBlock",
      "Properties": {
        "VpcId": { "Ref": "IPv6DualStackVPC" },
        "AmazonProvidedIpv6CidrBlock": true
      }
    },
    "PublicSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": { "Ref": "IPv6DualStackVPC" },
        "CidrBlock": "10.0.1.0/24",
        "Ipv6CidrBlock": "fd00::100/64",
        "MapPublicIpOnLaunch": true,
        "Tags": [
          { "Key": "Name", "Value": "PublicSubnet" }
        ]
      },
      "DependsOn": "IPv6CIDRAssociation"
    },
    "PrivateIPv6OnlySubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": { "Ref": "IPv6DualStackVPC" },
        "CidrBlock": "fd00::200/64",
        "Ipv6CidrBlock": "fd00::200/64",
        "AssignIpv6AddressOnCreation": true,
        "Tags": [
          { "Key": "Name", "Value": "PrivateIPv6OnlySubnet" }
        ]
      },
      "DependsOn": "IPv6CIDRAssociation"
    },
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway"
    },
    "GatewayAttachment": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": { "Ref": "IPv6DualStackVPC" },
        "InternetGatewayId": { "Ref": "InternetGateway" }
      }
    },
    "PublicRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "IPv6DualStackVPC" },
        "Tags": [
          { "Key": "Name", "Value": "PublicRouteTable" }
        ]
      }
    },
    "PublicRoute": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTable" },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": { "Ref": "InternetGateway" }
      }
    },
    "PublicIPv6Route": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTable" },
        "DestinationIpv6CidrBlock": "::/0",
        "GatewayId": { "Ref": "InternetGateway" }
      }
    },
    "PublicSubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "PublicSubnet" },
        "RouteTableId": { "Ref": "PublicRouteTable" }
      }
    },
    "PrivateIPv6OnlyRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "IPv6DualStackVPC" },
        "Tags": [
          { "Key": "Name", "Value": "PrivateIPv6OnlyRouteTable" }
        ]
      }
    },
    "PrivateIPv6OnlySubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "PrivateIPv6OnlySubnet" },
        "RouteTableId": { "Ref": "PrivateIPv6OnlyRouteTable" }
      }
    }
  },
  "Outputs": {
    "VPCID": {
      "Description": "VPC ID",
      "Value": { "Ref": "IPv6DualStackVPC" }
    },
    "PublicSubnetID": {
      "Description": "Public Subnet ID",
      "Value": { "Ref": "PublicSubnet" }
    },
    "PrivateIPv6OnlySubnetID": {
      "Description": "Private IPv6-Only Subnet ID",
      "Value": { "Ref": "PrivateIPv6OnlySubnet" }
    }
  }
}
