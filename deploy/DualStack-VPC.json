{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "Tags": [
          { "Key": "Name", "Value": "DualStackVPC" }
        ]
      }
    },
    "IPv6CIDRAssociation": {
      "Type": "AWS::EC2::VPCCidrBlock",
      "Properties": {
        "VpcId": { "Ref": "VPC" },
        "AmazonProvidedIpv6CidrBlock": true
      }
    },
    "PublicSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": { "Ref": "VPC" },
        "CidrBlock": "10.0.1.0/24",
        "Ipv6CidrBlock": {
          "Fn::Select": [
            0,
            { "Fn::GetAtt": ["VPC", "Ipv6CidrBlocks"] }
          ]
        },
        "MapPublicIpOnLaunch": true,
        "Tags": [
          { "Key": "Name", "Value": "PublicSubnet" }
        ]
      },
      "DependsOn": "IPv6CIDRAssociation"
    }
  }
}
